<% layout('layouts/boilerplate') %>
<h1 class="mb-3">Register</h1>
<h4 class="d-flex justify-content-around w-50">
    <a href="/auth/google"><i class="fa fa-google" aria-hidden="true"></i></a>
    <a href="/auth/twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
    <a href="/auth/facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
</h4>
<hr class="w-50">
<form action="/register" method="POST" class="d-flex flex-column w-50">
    <div class="from-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" id="name" name="name">
    </div>
    <div class="from-group mt-3">
        <label for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" />
    </div>
    <div class="from-group mt-3">
        <label for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" />
    </div>
    <div class="from-group mt-3">
        <label for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" />
    </div>
    <div class="from-group mt-3">
        <button class="btn btn-success" type="submit">Submit</button>
        <a class="float-end" href="/login">Login</a>
    </div>
</form>